<!DOCTYPE html>
<html>
  <head>
    <title>Neatt.</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="manifest" href="<%= asset_path 'manifest.json' %>">
    <%= render 'shared/ios_pwa_links' %>
  </head>

  <body class="<%= params[:controller]%>-<%= params[:action]%>" data-controller="task-form">
    <%# if params[:action] == "review" %>
      <%#= render 'shared/navbartoptwo' %>
    <% unless params[:action] == "home" %>
      <%= render 'shared/navbartop' %>
      <%#= render 'shared/flashes' %>
    <% end %>
    <%= yield %>
    <% if params[:action] == "profile" || params[:action] == "new"  %>
      <%= render 'shared/navbartwo' %>
    <% elsif params[:action] != "home" && params[:action] != "review" %>
      <%= render 'shared/navbar' %>
    <% end %>
  </body>
</html>
