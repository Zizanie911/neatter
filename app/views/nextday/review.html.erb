  <div class="text-calendar">
    <%= better_time(Date.today) %>
  </div>
    <hr>
  <div>
  <% today = Date.today %>
    <%  case @opacity_coeff[today] %>
      <% when (0..0.35) %>
      <h3>What a wonderful chillin' day! ðŸ˜Ž <br> You've done only <%= "#{@done_tasks_per_day[today]}" %> tasks today!</h3>
      <% when (0.36..0.75) %>
      <h3>Good job! ðŸ’ª <br> You made <%= "#{(@opacity_coeff[today] * 100).to_i}%" %> of your tasks list! </h3>
