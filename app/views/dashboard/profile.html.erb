            </div>
            <% @day + 1.day %>
          <% else %>
            <div>
              <div class=" item-dashboard"><%= day_abbr %></div>
              <div class=" item-dashboard"> <i class="fas fa-circle neat-opacity-<%=(counter * 100).to_i%> color-icon"></i></div>
              <% @day + 1.day %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

