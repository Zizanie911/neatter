<div class="container" style="padding-bottom: 100px">
  <div>
    <%= link_to profile_path do %>
      <svg height="32" viewBox="0 0 21 21" width="32" xmlns="http://www.w3.org/2000/svg"><path d="m6.5 7.5h4l-6 9v-6.997l-4-.003 6-9z" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" transform="translate(5 2)"/></svg>
    <% end %>
  </div>
  <%= render "hey" %>
  <%= render "estimated_time" %>

  <h6 class="index">Top Priority</h6>

  <ul style="padding-left: 0;">
    <div class="list-container">
      <% @tasks.where(priority: true).order(:mark_as_done).each do |task| %>
        <%= render 'task_form', task: task %>
      <% end %>
    </div>
  </ul>
  <hr>
  <h6 class="index">Tasks & Habits</h6>
  <ul style="padding-left: 0;">
    <div class="list-container">
      <% @tasks.where(priority: false).order(:mark_as_done).each do |task|%>
        <%= render 'task_form', task: task %>
      <% end %>
    </div>
  </ul>
  <script>
    document.querySelectorAll(".form-check-label.boolean.optional").forEach(element => element.innerHTML = "")
  </script>
</div>
